<div class="container">
	<h1>Master Page</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @masters.order("email").each do |f| %>
      <tr>
        <td><%= f.email %></td>
        <td><%= f.role.name %></td>
        <td><%= link_to 'Edit', edit_master_path(f) %></td>
      </tr>
    <% end %>
  </tbody>
</table>