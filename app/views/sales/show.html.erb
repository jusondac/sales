 <p id="notice"><%= notice %></p>  
 <p>  
  <strong>Name:</strong>  
  <%= @sale.name %>  
 </p>   
 <h1>Listing Item</h1>  
 <table class="table table-striped">  
  <thead>  
   <tr>  
    <th>Product</th>  
    <th>price</th>  
    <th>quantity</th>  
    <th>total</th>  
    <th></th>  
   </tr>  
  </thead>  
  <tbody>  
   <% @sale.items.each do |item| %>  
    <tr>  
     <td><%= item.product.name %></td>  
     <td>Rp. <%= number_with_delimiter(item.product.price,:delimiter => ",", :separator => ".") %></td>  
     <td><%= item.quantity %></td>  
     <td>Rp. <%= number_with_delimiter(item.total,:delimiter => ",", :separator => ".") %></td>  
    </tr>  
   <% end %>  
  </tbody>  
 </table>  
 <hr>  
  <p> Total </p>  
  Rp. <%= number_with_delimiter(@sale.total,:delimiter => ',',:separator => ".") %>  
 <hr>  

<%= link_to 'Edit', edit_sale_path(@sale) %> |
<%= link_to 'Back', sales_path %>
